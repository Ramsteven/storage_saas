
<h1>Boxes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Name box</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

<p>
  <% if  current_tenant.plan == "moderate"%>
    <strong>Plan:</strong> <%=current_tenant.plan%> max 5 boxes
  <% elsif current_tenant.plan == 'unlimitess' %> 
    <strong>Plan:</strong> <%=current_tenant.plan%> unlimitess boxes
  <% else %>
    <strong>Plan:</strong> <%=current_tenant.plan%> one box only
  <% end  %>
</p>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.id %></td>
        <td><%= box.description %></td>
        <td><%= link_to 'Enter', box_items_path(box)%></td>
        <td><%= link_to 'Edit', edit_box_path(box) %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_box_path(account_id: params[:account_id]) %> <br>
<%= link_to 'Back to Account', current_tenant %>
