<h1>Listing items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Box</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><div class="text-center"><%= image_tag item.image.variant(resize_to_limit: [100, 100]) if item.image.attached?  %><br> <%= item.description %> </div></td>
    <td><%= link_to 'Show', [item.box, item] %></td>
    <td><%= link_to 'Edit', edit_box_item_path(item.box, item) %></td>
    <td><%= link_to 'Destroy', [item.box, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_box_item_path(params[:box_id]) %>
